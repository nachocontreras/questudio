<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.8.2/css/bulma.css">

<body>
	<div class="container">
		<div class="card">
		  <div class="card-image">
		    <figure class="image is-4by3">
		      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
		    </figure>
		  </div>
		  <div class="card-content">
		    <div class="media">
		      <div class="media-left">
		        <figure class="image is-48x48">
		          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
		        </figure>
		      </div>
		      <div class="media-content">
		        <p class="title is-4">Nombre: <%- user.name %></p>
		        <p class="subtitle is-6">Apellidos: <%- user.lastname %></p>
		        <p class="subtitle is-6">Tipo de usuario: <%- user.getType() %></p>
		        <% if (user.userType == '1') { %>
				    <p class="subtitle is-6">Universidad: <%- user.university.name %></p>
				<% } %>
		      </div>
		    </div>

