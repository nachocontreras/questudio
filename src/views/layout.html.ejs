<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>Questudio</title>
    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>
    <link
    rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.8.2/css/bulma.css">
    <link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  </head>

  <body>
  
  <nav class="navbar has-background-grey-lighter" role="navigation" aria-label="main navigation" style="height: 0px;">
    <span></span>
    <div class="navbar-brand">
      <a class="navbar-item" href="<%- welcomePath %>" style="padding: 0;">
        <img width="120" height="200" src="<%= assetPath('questudio.jpeg') %>" alt="Logo" />
      </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item" href="<%- universitiesPath %>">Universidades</a>
        <a class="navbar-item" href="<%- careersPath %>">Carreras</a>
        <a class="navbar-item" href="<%- testsVocacionalesPath %>">Tests Vocacionales</a>

          <div class="navbar-item field">
            <p class="control has-icons-right">
              <form id="search-form" style="margin-top: 20px;">
              <input id="search-box" class="input" type="search" placeholder="Search...">
              <span class="icon is-small is-right">
                <icon />
              </span>
              </form>
            </p>
          </div>
        </div>
      </div>

      <% if (currentUser) { %>
        <div class="navbar-end">
          <div class="navbar-item">
            <a href="<%- profilePath %>">Perfil&nbsp;&nbsp;</a>
            <form id="signout-form" action="<%= destroySessionPath %>" method="post">
              <input type="hidden" name="_method" value="delete" />
              <a onclick="document.getElementById('signout-form').submit()">
                <i class="fas fa-sign-out-alt"></i>
              </a>
            </form>
          </div>

      <% } else { %>
         <div class="navbar-item">
          <div class="buttons">
            <a class="button is-primary" href="<%- newSessionPath %>"><strong>Iniciar Sesi√≥n</strong></a>
            <a class="button is-light" href="<%- createUserPath %>">Registrarse</a>
          </div>
        </div>
      <% } %>

      <div class="navbar-end">
      </div>
    </div>
  </nav>
  <div id="search-results"></div>
  <%- body %>
  
</body>

  <script src="<%= assetPath('app.js') %>"></script>

</html>

