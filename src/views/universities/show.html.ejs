

<div class="container">
  <br>
  <section>
    <section class="hero is-primary">
      <div class="hero-body">
        <div class="container">
          <h1 class="title">
            <%- university.name %>
          </h1>
          <form action="<%=showGalleryPath%>">
            <input id="go-to-gallery-button" type="submit" value="Ir a la Galería">
          </form>
          <div class="searcher">
            <form id="search-career-form">
              <input type="text" id="career-input" placeholder="Busca una carrera..." />
            </form>
            <div class="career-result" id="<%= university.id %>"></div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <div class="container">
    <div class="container" align="center">
      <img
        src="<%= university.imageUrl || 'https://res.cloudinary.com/dbs6fwbbs/image/upload/v1589142071/universities-images/university_placeholder_sxcvn0.png'%>"
        alt="Placeholder image">
    </div>

    <div id=""></div>

    <p align="justify"><%- university.description %></p>
    <br>
  </section>

  <h3 class="title is-3">Carreras</h3>
  <h5 class="subtitle is-5">Tiene <%- careersList.length %> carrera(s)</h5>
  <% if (careersList.length == 0) { %>
  <p>Esta universidad aun no posee carreras registradas.</p>
</div>

<% } else { %>
<div class="container">
  <div class="columns is-desktop is-multiline">
    <% careersList.forEach((career) => { %>
    <div class="column is-4">
      <div class="card" style="background-color: rgb(234, 250, 244);">
        <div class="card-content">

          <div class="media">
            <div class="media-content">
              <p class="title is-5"><a href="<%= showCareerPath(career) %>"><%- career.name %></a></p>
              <p class="title is-6">Área: <%- career.area %></p>
            </div>
          </div>

          <div class="content">
            <p>Vacantes: <%- career.vacancies %></p>
            <p>Puntaje de corte: <%- career.minScore %></p>
            <p>Duración de la carrera: <%- career.duration %></p>
          </div>
          <% if (userIsStaff) { %>
          <div class="columns">
            <a class="button is-light" href="<%= editCareerPath(career) %>">Editar</a>
            &nbsp;
            &nbsp;
            <form action="<%= deleteCareerPath(career) %>" method="POST">
              <input type="hidden" name="_method" value="delete" />
              <input class="button is-light" type="submit" value="Delete" />
            </form>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <br>
  <br>

</div>


<% } %>

<div class="container">
  <br>

  <% if (userIsStaff || (currentUser && currentUser.admin)) { %>
    <%- include('staff/_staff_options') %>
  <% } else { %>
    <%- include('staff/_no_staff_options') %>
  <% } %>
</div>

<br />
<br />
<br />

