<div>
  <% if (locals.errors) { %>
    <div class="errors">
      You need to fix the following errors:
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form action="<%= submitUniversityPath %>" method="post">
    <% if (!university.isNewRecord) { %>
      <input type="hidden" name="_method" value="patch" />
    <% } %>
    <div  class="field">
      <label for="name">Nombre: </label>
      <input type="text" name="name" value="<%= university.name %>" required>
    </div>
    
    <div  class="field">
      <label for="address">Direccion: </label>
      <input type="text" name="address" value="<%= university.address %>" required>
    </div>

    <div  class="field">
      <label for="description">Descripcion: </label>
      <input type="text" name="description" value="<%= university.description %>" required>
    </div>
    <div  class="field">
      <% if (university.isNewRecord) { %>
        <input type="submit" name="create" value="Crear" />
      <% } else { %>
        <input type="submit" name="update" value="Editar" />
      <% } %>
    </div>
  </form>
</div>

<div>
  <form action="<%- addUniversityImagePath %>" enctype="multipart/form-data" method="post">
      <div class="universityImageDiv">
        Escoger Imagen:
        <label for="universityImage">
          <img src="<%= university.imageUrl || 'https://res.cloudinary.com/dbs6fwbbs/image/upload/v1589142071/universities-images/university_placeholder_sxcvn0.png'%>" alt="Placeholder image">
        </label>
        <input type="file" onchange="this.form.submit()" id="universityImage" name="universityImage" accept="image/*" data-type='image'/>
      </div>
  </form>
</div>


<div>
  <form action="<%- addUniversityLogoPath %>" enctype="multipart/form-data" method="post">
      <div class="universityImageDiv">
        Escoger Logo:
        <label for="universityLogo">
          <img src="<%= university.logoUrl || 'https://res.cloudinary.com/dbs6fwbbs/image/upload/v1589142071/universities-images/university_placeholder_sxcvn0.png'%>" alt="Placeholder image">
        </label>
        <input type="file" onchange="this.form.submit()" id="universityLogo" name="universityLogo" accept="image/*" data-type='image'/>
      </div>
  </form>
</div>